{% extends 'base.html.twig' %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% block stylesheets %}
{{ parent() }}
<link type="text/css" rel="stylesheet" media="screen" href="{{ asset('css/links.css') }}" />
<style>
	.link-item {
		padding: 1em;
	}
</style>
{% endblock %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% block body %}
<div class="container">

	{% for category in links %}
		<div>
			<h2>{{ category.name }}</h2>

			<ul class="list-unstyled row">{% for curr_link in category['links'] %}

				<li class="col-xs-12 col-sm-6 col-md-4 col-lg-3 link-item">
					<a href="{{ curr_link.href }}">{% spaceless %}
						<h4 class="title">{{ curr_link.name }}</h4>

						<div class="background">{% if curr_link.background is not null %}
							<img src="{{
									asset('bundles/timdoerzbacher/img/links/') ~ curr_link.background
								}}" alt="Background image" />
						{% endif %}</div>


						{% if curr_link.description is defined %}
							<p class="link-item_description">{{ curr_link.description }}</p>
						{% endif %}
					{% endspaceless %}</a>

				</li>

			{% endfor %}</ul>
		</div>
	{% endfor %}

	<div class="fair-use alert alert-info">
		<p>
			<strong>Fair Use Notice:</strong>
			The above are all croppings of screenshots from the websites linked.
			All rights belong to their respective owners.
		</p>
	</div>

</div>
{% endblock %}
