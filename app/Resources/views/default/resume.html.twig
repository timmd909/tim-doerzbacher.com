{% extends 'base.html.twig' %}

{% block scripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/resume.js') }}"></script>
{% endblock %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% block stylesheets %}
{{ parent() }}
<link type="text/css" rel="stylesheet" href="{{ asset('bundles/timdoerzbacher/css/resume.css') }}" />
{% endblock %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% macro skill(info, classes) %}
	<li class="{{ classes | default('col-xs-6 col-sm-4 col-md-3 col-lg-2')}}">{% spaceless %}
		<div class="level {{ 'level' ~ info.level }}">
			<img src="{{ asset('bundles/timdoerzbacher/img/battery-icons.png') }}"
				alt="{{ info.level }} out of 5" /></div>
		{{ info.name }}
	{% endspaceless %}</li>
{% endmacro %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% macro experience(info) %}
	<div class="experience row">
		<div class="duration col-xs-12 col-md-3">{{ info.started }} &mdash;
			{% if info.ended is null %}Present {% else %} {{ info.ended }}{% endif %}
		</div>
		<div class="col-xs-12 col-md-9">
			<h3>{{ info.name }}</h3>
			<div class="description">{{ info.description }}</div>
			<ul>{% for currPoint in info.experiencePoints %}
				{% spaceless %}

				<li>{{ currPoint.description }}
					<ul>{% for currNote in currPoint.children %}
						<li>{{ currNote.description }}</li>
					{% endfor %}</ul>
				</li>

				{% endspaceless %}
			{% endfor %}</ul>
		</div>
	</div>
{% endmacro %}

{% import _self as resume %}

{# -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- -=- #}

{% block body %}

<div class="container">

	<section class="intro">
		<p>{{ key_values.introcopy }}</p>
	</section>

	<section class="contact-info">{% spaceless %}
		<h2>Contact Info</h2>
		<div class="row">
			<div class="phone-number col-xs-12 col-md-3">
				<p>{{ key_values.phone_number | raw }}</p>
			</div>
			<div class="address col-xs-12 col-md-3">
				<p>{{ key_values.address }}</p>
				<p>{{ key_values.city }}, {{ key_values.state }} {{ key_values.zip }}</p>
			</div>
			<div class="email-address col-xs-12 col-md-3">
				<p>
					{{ key_values.email | raw }}
					<span class="domain"></span>
				</p>
			</div>
		</div>
	</section>

	{% endspaceless %}</div>

	<section class="skillsets container">
		<h2>What I Can Do</h2>

		<p>Here's an annotated list of software, languages, and so forth
			that I've used. The battery icons indicate my level of comfort
			with a particular item. They correlate very closely with how
			long I've been using them. Except ejabberd. I'll never be
			comfortable using that on a day to day basis due to the high
			risk of self-defenestration after prolonged exposure.
		</p>

		<div class="container">
			<div class="sub-section row">
				<h3>Software &amp; Tools</h3>
				<ul class="tools">{% for tool in tools %}
					{{ resume.skill(tool) }}
				{% endfor %}</ul>
			</div>

			<div class="sub-section row">
				<h3>Languages</h3>
				<ul class="languages">{% for language in languages %}
					{{ resume.skill(language) }}
				{% endfor %}</ul>
			</div>

			<div class="sub-section row">
				<h3>Skills</h3>
				<ul class="skills">{% for skill in skills %}
					{{ resume.skill(skill) }}
				{% endfor %}</ul>
			</div>

			<div class="sub-section row">
				<h3>Operating Systems</h3>
				<ul class="operating-systems">{% for os in operating_systems %}
					{{ resume.skill(os) }}
				{% endfor %}</ul>
			</div>

		</div>

	</section>

	<section class="experiences container">
		<h2>Where I've Worked</h2>

		{% for curr in experiences %}
			{{ resume.experience(curr) }}
		{% endfor %}
	</section>

	<section class="education container">
		<h2>Education</h2>
		<div class="experience row">
			<div class="duration  col-xs-12 col-md-3">2005 &mdash; 2009 </div>
			<div class="col-xs-12 col-md-9">
				<h3>Art Institute of Pittsburgh</h3>
				<div class="description">Graduated with Bachelor degree in Graphic Design</div>
			</div>
		</div>
	</section>

	<section class="references container">
		<h2>References</h2>
		References available upon request.
	</section>

</div>


{% endblock %}
